.page-people

  item(w, m)
    display flex
    flex-flow row wrap
    padding 3%

    &-item
      width w
      height auto
      margin m 
      border-radius 50%
      border 4px solid transparent
      c=#2cc5e2
      &:hover
        border 4px outset c
      &:active, &.__active
        border 4px outset darken(c, 15%)

      &-img
        border 1px solid #fff
        width 100%
        height 100%
        border-radius 50%
        float left

  .give
    &-a-cap-wrap
      background rgba(#fcfcfc, .3)
      width 100%
      height 100vh
      position fixed
      top 0
      left 0
      z-index 1
      overflow scroll

    &-a-cap
      position relative
      width 44%
      margin 3% auto
      padding-top 30px
      border 1px solid
      background #fcfcfc
      box-shadow 0 10px 140px #000
      &-close
        btn()
        position absolute
        top 0
        right 0 
        width 30px
        height 30px
        line-height 24px
    &-people
      item(18%, 1%)
      &-item
        opacity .85
        &:hover, &:active, &.__active
          opacity 1
    &-cap
      item(18%, 1%)
      max-height 300px
      overflow auto
      background linear-gradient(#fcfcfc 30%, #fcfcfc),
        linear-gradient(#fcfcfc, #fcfcfc 70%) 0 100%,
        linear-gradient(#1d1d1d 3%, rgba(#fcfcfc, 0) 3%, rgba(#fcfcfc, 0) 98%, #1d1d1d 98%)
      background-size 100% 25px, 100% 25px, 100% 100%
      background-repeat no-repeat
    
      background-attachment local, local, scroll

      &-item.__owned
        pointer-events none
        opacity .4


    &-reason
      padding 20px
      &-header, textarea
        width 60%
        margin 0 20%
      textarea
        border none
        resize none
        outline none
        font-size 16px
        background inherit
