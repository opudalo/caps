btn()
  display inline-block
  border 1px solid black
  color rgba(252, 252, 252, 1)
  background rgb(41, 41, 41)
  cursor pointer
  user-select none
  text-align center
  &:hover
    background: #000
    color #fff

.btn-cap
  btn()
  padding 10px 20px
  &.__sec
    margin-bottom 15px
  
.page-people  
  .people
    padding 30px 0 10px 0
    display table

    &-avatar
      w = 40px
      width w
      display table-cell
      img
        border-radius w * 0.5
        width w
        height w

    &-desc
      display table-cell
      vertical-align top
      padding-left 10px
      line-height 20px

    &-name
      font-size 15px
      color #222
    &-title
      font-size 13px
      color #999


  .cap
    display table
    padding 5px 0 5px 40px
    &-item
      display table-cell
      w = 50px
      width w
      height w
      img
        width w
        height w
    &-reason
      display table-cell
      vertical-align middle
      padding-left 20px
