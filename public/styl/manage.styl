.page-manage
  .cap-list
    display flex
    flex-flow row wrap
  .cap
    width 20%
    padding: 20px
    w=120px
    &-item
      position relative
      width w
      height w
      margin auto
      border-radius 50%
      border 4px solid transparent
      c=#2cc5e2
      &:hover
        border 4px outset c
        .cap-item-ctrl
          display flex
        & ~ .cap-name
          color #000
        
      &:active, &.__active
        border 4px outset darken(c, 15%)

      &-img
        border 1px solid #fff
        width 100%
        height 100%
        border-radius 50%
      &-ctrl
        position absolute
        display none
        flex-direction column
        padding 25px 0
        top 0
        width 100%
        height 100%
        border-radius 50%
        background rgba(#fff, .8)
        color c
        cursor pointer
        
        &-item
          user-select none
          margin auto
          padding 5px
        &-item:hover
          color red
        
    &-name
      padding-top 5px
      text-align center
      cursor default


